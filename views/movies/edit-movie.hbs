<h2>Edit Movie</h2>
<form action="/movies/{{results._id}}/edit" method ="POST">
<input type="text" name="title" value="{{results.title}}">
<input type="text" name="genre" value="{{results.genre}}">
<input type="textarea" name="plot" value="{{results.plot}}">
<select multiple name="cast">
        {{#each celebrities}}
      <option value="{{_id}}">{{name}}</option>
      {{/each}}
    </select>
   <button type="submit">Update</button>
</form>